        <div class="card">
          <img src="<%=podcast.images[0].url%>" alt="" class="card-img" />
          <div class="card-img-overlay">
            <p class="card-text"></p>
          </div>
          <div class="card-footer bg-transparent">
            <%=podcast.name%>
            <!-- <%=podcast.description%> -->
          </div>
        </div>
      </a>
        <%}%>
      <% }) %> 
    </div>
