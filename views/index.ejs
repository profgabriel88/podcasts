<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <link rel="stylesheet" href="css/estilo.css" />
    <title>Document</title>
  </head>
  <body>
    <nav id="navbar">
      <h2>Podcasts</h2>
      <ul>
        <a href="">
          <li>Explorar</li>
        </a>
        <a href="">
          <li>Inscrições</li>
        </a>
        <a href="">
          <li>Favoritos</li>
        </a>
        <a href="">
          <li>Playlists</li>
        </a>
      </ul>
    </nav>
    <div class="container">
      <input
        class="form-group"
        type="text"
        placeholder="Buscar..."
        name=""
        id="busca"
      />
      <div class="container">
        <h5>Em alta</h5>
        <div class="cards">
          <% podcasts.forEach( podcast => { %>
            <% if (!podcast.explicit) { %>
            <div class="card">
              <img src="<%=podcast.images[0].url%>" alt="" class="card-img" />
              <div class="card-img-overlay">
                <p class="card-text"></p>
              </div>
              <div class="card-footer bg-transparent">
                <%=podcast.name%>
                <!-- <%=podcast.description%> -->
              </div>
            </div>
            <%}%>
          <% }) %> 
        </div>
      </div>

        <div class="container">
          <h5>Sugestões para você</h5>
          <div class="cards-redondo">
            <div id="redondo" class="card border-light  text-center">
              <img src="img/goku.jpg" alt="" class="card-img mx-auto" />
              <div class="card-img-overlay">
                <p class="card-text"></p>
              </div>
              <div class="card-footer bg-transparent">
                DBZ
              </div>
            </div>
            <div id="redondo" class="card border-light  text-center">
              <img src="img/digimon.jpg" alt="" class="card-img mx-auto" />
              <div class="card-img-overlay">
                <p class="card-text"></p>
              </div>
              <div class="card-footer bg-transparent">
                Digimon
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
